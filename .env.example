# === ATLAS Environment Variables ===

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Telegram Bot
TELEGRAM_BOT_TOKEN=123456:ABC-DEF
TELEGRAM_ADMIN_CHAT_ID=123456789

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://atlas:password@localhost:5432/atlas_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Qdrant (Vektor Veritabani)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# SSH (Sunucu yonetimi icin)
SSH_DEFAULT_HOST=
SSH_DEFAULT_USER=
SSH_DEFAULT_KEY_PATH=~/.ssh/id_rsa

# Uygulama
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=INFO
APP_SECRET_KEY=change-this-secret-key

# Master Agent
MASTER_AGENT_AUTO_MODE=false
MASTER_AGENT_MAX_RETRIES=3
